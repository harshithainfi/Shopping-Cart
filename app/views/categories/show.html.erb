<div id="page-content">
   <h1 class="text-center mt-4">Category: <%= @category.name %></h1>
    <h3 class="text-center mt-4">Items</h3>
    <% @items.each do |item| %>
        <div class="card" style="width: 18rem;">
              <%= image_tag item.image, height: 250 %>
          <div class="container">
              <div class="card-body">
                  <h5 class="card-title"><%= item.itemname %></h5>
                  <p class="card-desc"><%= item.desc %></p>
              </div>
              <%= link_to "View Item", item_path(item), class: "btn btn-primary" %>
              
         </div>
     <% end %>
      </div>  
      
</div>
