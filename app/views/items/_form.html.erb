<div class="row justify-content-center">
		<div class="col-10">
		     <%= form_for @item do |f| %>
						<div class="form-group row">
									<%= f.label :ItemName, class: "col-2 col-form-label text-dark"  %>
									<div class="col-10">
										<%= f.text_field :itemname,  class: "form-control shadow rounded", placeholder: "Title of item" %>
									</div>
						</div>

						<div class="form-group row justify-content-center">
							 <%= f.label :desc, class: "col-2 col-form-label text-dark" %>
							 <div class="col-10">
							 <%= f.text_area :desc, class: "form-control  shadow rounded", placeholder: "Description of article"  %>
							</div>
						</div>
            <div class="form-group row">
             			<%= f.label :image, class: "col-2 col-form-label text-dark"  %>
             			<div class="col-10">
             				<%= f.text_field :image%>
             			</div>
            </div>
                    

             <%= f.fields_for :stock do |a| %>
							<div class="form-group row justify-content-center">
								 <%= a.label :price, class: "col-2 col-form-label text-dark" %>
								 <div class="col-10">
								 <%= a.text_field :price, class: "form-control  shadow rounded", placeholder: "Price of item"  %>
								</div>
							</div>
	                         

							<div class="form-group row justify-content-center">
								 <%= a.label :quantity, class: "col-2 col-form-label text-dark" %>
								 <div class="col-10">
								 <%= a.text_field :quantity, class: "form-control  shadow rounded", placeholder: "Quantity of article"  %>
								</div>
							</div>
						<% end %>	

						<div class="form-group row justify-content-center">	
							<%= f.submit class: "btn btn-outline-dark btn-lg" %>
						</div>	
					<% end %>	
		</div>
	

		<%= link_to '[Cancle and Return to item listing]', items_path, class: "text-info" %>
</div>